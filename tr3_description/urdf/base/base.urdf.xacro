    </collision>
    <inertial>
        <mass value="0.1" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://tr3_description/meshes/stl/tr-bs-c.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="slate_gray">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
      <origin rpy="0 0 1.5708" />
    </visual>
  </link>

  <joint name="b2" type="fixed">
    <parent link="base_link"/>
    <child link="link_b2"/>
    <origin xyz="-0.39975 -0.147 -0.097" rpy="0 3.1415 3.1415"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="b3" type="fixed">
    <parent link="link_b2"/>
    <child link="link_b3"/>
    <origin xyz="-0.0138 0 0.0390" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="b4" type="fixed">
    <parent link="base_link"/>
    <child link="link_b4"/>
    <origin xyz="-0.39975 0.147 -0.097" rpy="0 3.1415 3.1415"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="b5" type="fixed">
    <parent link="link_b4"/>
    <child link="link_b5"/>
    <origin xyz="-0.0138 0 0.0390" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="rplidar_joint" type="fixed">
    <axis xyz="0 0 1" />
    <origin xyz="0.11 0 0" rpy="0 0 3.1415" />
    <parent link="base_link" />
    <child link="laser" />
  </joint>

  <link name="laser">
  </link>

	<xacro:tr3_wheel name="b0">
    <axis xyz="0 1 0"/>
		<origin rpy="0 0 0" xyz="0 0.3281 0"/>
	</xacro:tr3_wheel>

	<xacro:tr3_wheel name="b1">
    <axis xyz="0 -1 0"/>
		<origin rpy="0 0 3.1415" xyz="0 -0.3281 0"/>
	</xacro:tr3_wheel>

	<!-- dummy link required in order to specify base_link inertia because MoveIt is insane -->
  <link name="dummy_link">

  </link>
  
  <joint name="dummy_joint" type="fixed">
     <parent link="dummy_link"/>
     <child link="base_link"/>
   </joint>

</robot>
