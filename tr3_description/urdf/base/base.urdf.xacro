  </link>

  <link name="link_b4">
    <collision>
      <geometry>
        <mesh filename="package://tr3_description/meshes/stl/tr-bs-b.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 1.5708" />
    </collision>
    <inertial>
