        <color rgba="0.2 0.2 0.2 1"/>
      </material>
      <origin rpy="0 0 1.5708" />
    </visual>
  </link>

  <joint name="b2" type="continuous">
    <parent link="base_link"/>
    <child link="link_b2"/>
    <origin xyz="-0.147 -0.39975 -0.09635" rpy="0 3.1415 -1.5708"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="b3" type="continuous">
    <parent link="link_b2"/>
    <child link="link_b3"/>
    <origin xyz="-0.0138 0 0.0390" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <joint name="b4" type="continuous">
    <parent link="base_link"/>
    <child link="link_b4"/>
